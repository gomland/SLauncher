<?xml version="1.0" encoding="utf-8"?>
<my.home.slauncher.view.ui.WidgetPreviewParent xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2effffff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_item_space_margin"
        android:layout_marginRight="@dimen/widget_item_space_margin"
        android:padding="@dimen/widget_item_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/menu_item_font_size"/>
        <ImageView
            android:id="@+id/widget_preview"
            android:layout_marginTop="5dp"
            android:layout_width="@dimen/widget_item_size"
            android:layout_height="@dimen/widget_item_size" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#9b262626"/>
</my.home.slauncher.view.ui.WidgetPreviewParent>